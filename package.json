{
  "name": "star-kitten",
  "module": "src/main.ts",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@flydotio/dockerfile": "^0.5.9",
    "@types/bun": "^1.1.10",
    "@types/eslint": "^9.6.1",
    "@types/tar": "^6.1.13",
    "bun-types": "^1.1.29",
    "dotenv-vault": "^1.26.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.2",
    "lzma-native": "^8.0.6",
    "mkdirp": "^3.0.1",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "typescript-eslint": "^8.8.0"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@elysiajs/html": "^1.1.1",
    "@elysiajs/swagger": "^1.1.3",
    "@lucia-auth/adapter-sqlite": "^3.0.2",
    "@sentry/bun": "^8.33.1",
    "@sentry/cli": "^2.36.6",
    "arctic": "^1.9.2",
    "cron-parser": "^4.9.0",
    "date-fns": "^4.1.0",
    "discord.js": "^14.16.3",
    "elysia": "^1.1.17",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.6",
    "jwt-decode": "^4.0.0",
    "lucia": "^3.2.0",
    "minisearch": "^7.1.0",
    "pino": "^7.11.0",
    "pino-pretty": "^11.2.2",
    "winston": "^3.14.2"
  },
  "scripts": {
    "dev": "bunx dotenvx run -f .env.development -- bun --watch src/main.ts",
    "start": "bunx @dotenvx/dotenvx run -f .env.production -- bun src/main.ts",
    "build": "mkdirp ./db && bun build --minify --sourcemap src/main.ts --target bun --outdir ./dist && bun run sentry:sourcemaps",
    "test": "bun test",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "get-data": "bun run refresh:reference-data && bun run refresh:hoboleaks",
    "refresh:reference-data": "bun run ./downloadAndExtract.ts https://data.everef.net/reference-data/reference-data-latest.tar.xz ./data/reference-data",
    "refresh:hoboleaks": "bun run ./downloadAndExtract.ts https://data.everef.net/hoboleaks-sde/hoboleaks-sde-latest.tar.xz ./data/hoboleaks",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org jb-codecorsair --project star-kitten ./dist && sentry-cli sourcemaps upload --org jb-codecorsair --project star-kitten ./dist"
  }
}
